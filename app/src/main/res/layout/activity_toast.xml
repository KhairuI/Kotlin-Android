<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/linearLayout"
    android:layout_height="match_parent"
    tools:context=".ToastActivity">

    <Button
        android:text="Sample Toast"
        android:id="@+id/sampleToast"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:text="Custom Toast"
        android:id="@+id/customToast"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:text="Error Toast"
        android:id="@+id/errorToast"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:text="Success Toast"
        android:id="@+id/successToast"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:text="Info Toast"
        android:id="@+id/infoToast"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:text="Snack Bar"
        android:id="@+id/snackBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    </Button>

</LinearLayout>